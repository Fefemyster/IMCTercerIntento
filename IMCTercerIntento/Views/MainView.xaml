<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMCTercerIntento.Views.MainView"
             xmlns:viewModel="clr-namespace:IMCTercerIntento.ViewModels" 
    Title="MainView">

    <ContentPage.BindingContext>
        <viewModel:MainViewModel/>
    </ContentPage.BindingContext>


        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="5">
            <Label Text="Ingrese su peso: " />
            <Entry Text="{Binding Weight}" Keyboard="Numeric"/>

            <Label Text="Ingrese su altura: " />
            <Entry Text="{Binding Height}" Keyboard="Numeric"/>

            <Label Text="Su IMC es: " />
            <Entry Text="{Binding Imcresult}" IsReadOnly ="True"/>

            <Button Text="Calcular IMC" Command="{Binding CalcularImcCommand}" />
            <Button Text="Limpiar IMC" Background="HotPink" Command="{Binding CleanCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>